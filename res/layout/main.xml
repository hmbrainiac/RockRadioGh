<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/light_gray"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_weight="3"
            android:background="@color/light_gray"

            android:layout_height="0px">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:src="@drawable/logo"
                android:background="@color/or"
                android:layout_marginBottom="5dp"
                android:id="@+id/imageView3"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/imageView3"
                android:layout_weight="3"
                android:src="@drawable/banner"
                android:background="@color/white"
                android:id="@+id/now_Program"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/deep_gray"
            android:layout_weight="4"
            android:layout_gravity="center_horizontal">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/dark"
                android:layout_gravity="center_horizontal">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pl_ico"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="2dp"
                    android:id="@+id/pl_ico"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/download_img"
                    android:src="@drawable/down"

                    android:layout_alignParentRight="true"/>
            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Download Song"
                    android:layout_toStartOf="@id/download_img"
                    android:layout_marginRight="18dp"
                    android:layout_alignBottom="@id/download_img"
                    android:layout_alignRight="@id/download_img"

                    android:id="@+id/download_txt"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sa(Irene Logan)"
                    android:layout_toRightOf="@id/pl_ico"
                    android:id="@+id/song_Playing"/>

        </RelativeLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/stopped"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:id="@+id/stop_img_btn"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Stop"

                        android:layout_gravity="center_horizontal"
                        android:id="@+id/textView4"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/to_play"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/play_img_btn"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Play"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/textView5"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="fill_parent">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/to_record"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:id="@+id/record_img_btn"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Record"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/textView6"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/decreasing"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="5dp"

                    android:id="@+id/decrease_volume"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/increasing"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/increase_volume"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@color/whitish"
            android:layout_gravity="center_horizontal">

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ad_img"
                android:id="@+id/add_space"/>
    </LinearLayout>

</LinearLayout>



